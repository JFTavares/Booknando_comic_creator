/* Sistema de produção de Comic book ePub3 FXL */

@charset "UTF-8";

body{{
    padding:0;
    margin:0;
    top: 0px;
    left: 0px;
    width: {img_width}px;
    height: {img_height}px;
    position: absolute;
}}

figure {{
    display:block;
    margin: 0;
	padding: 0;
    overflow-x: hidden;
    overflow-y: hidden;
    position: absolute;
    overflow: hidden;
    top: 0px;
    left: 0px;
    width: {img_width}px;
    height: {img_height}px;
    opacity: 1;
    z-index: 0;
    pointer-events: none;
}}

img {{
    margin: 0;
	padding: 0;
    position: absolute;
    left: 0px;
    top: 0px;
    width: {img_width}px;
    height: {img_height}px;
}}